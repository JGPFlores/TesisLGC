% **************************************************
%	Formato del título de los capítulos:
% **************************************************
\RequirePackage{titlesec} % Activar para el Formato 001 o el Formato 002

\newcommand*\HUGE{\Huge}
\newcommand*\chapnamefont{\chaplabel\MakeUppercase} %Etiqueta "capítulo"
\newcommand*\chapnumfont{\chapnum} %Número del capítulo
\newcommand*\chaptitlefont{\chaptertitle} %Nombre del capítulo

\titleformat{\chapter}[display]
  {\centering\normalfont} %centrar etiqueta "capítulo"
  {\chapnamefont\chaptertitlename~\\ \chapnumfont\thechapter}
  {25pt}
  {\centering\chaptitlefont}
\titlespacing*{\chapter}
  {40pt}{-1em}
  {40pt}


