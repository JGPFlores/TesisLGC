% **************************************************
% Citas al inicio de un capítulo:
% **************************************************
\newcommand{\hugequote}{%
	{\comilla\fontsize{75}{80}\selectfont% \fontsize{75}{80}
	\hspace*{-.475em}\color{iColor004}%
	\textit{\glqq}% \glqq •\grqq
	\vskip -.26em}%
}

\newcommand{\chapterquote}[3]{%
	\begin{minipage}{1\textwidth}%1
		\begin{center} %center
			\begin{minipage}{0.60\textwidth}% 0.70
			\quotefont\selectfont%
				\begin{flushleft} %flushleft
					{\hugequote}~	\textit{#1} %Frase
				\end{flushleft} %flushleft
	    		\begin{flushright}
    				--- #2 \\ %\textcolor{iColor003}{--- \textbf{#2}}
    				(#3)
		    	\end{flushright}
		    \end{minipage}%
		\end{center} %center
	\end{minipage}%	  
	\bigskip
	\bigskip
}


